<% include ../partials/header %>

    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center">Registration</h1>

            <% if(success){ %>
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-success">
                            <%= success %>
                        </div>
                    </div>
                    <%}%>

                    <% if(errstatus){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-danger">
                                    <%= errstatus %>
                                </div>
                            </div>
                            <%}%>
                            
                        <% if(errors){ %>
                            <% errors.forEach((res)=>{ %>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="alert alert-danger">
                                            <%= res.message %>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                                    <%}%>

                                        <form action="/contactApp/user/register" method="POST">
                                            <div class="form-horizontal">

                                                <div class="form-group">
                                                    <label for="">Username : </label>
                                                    <input type="text" name="username" class="form-control" value="<%= form.username %>">
                                                </div>

                                                <div class="form-group">
                                                    <label for="">Email : </label>
                                                    <input type="text" name="email" class="form-control" value="<%= form.email %>">
                                                </div>

                                                <div class="form-group">
                                                    <label for="">Password : </label>
                                                    <input type="password" name="password" class="form-control" value="<%= form.password %>">
                                                </div>

                                                <div class="form-group">
                                                    <label for="">Confirm Password : </label>
                                                    <input type="password" name="confirmpassword" class="form-control" value="<%= form.confirmpassword %>">
                                                </div>

                                                <div class="form-group">
                                                    <input type="submit" class="btn btn-block btn-success">
                                                </div>

                                            </div>
                                        </form>

                                        <a href="/contactApp/user/login">Go to login</a>

                </div>
        </div>